{
    "env": {
		"es6":true,
        "browser": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint"
        ],
    "parserOptions":{
        "ecmaVersion":2020,
        "sourceType":"module"
    },    
    "rules": {
        "camelcase": "error",
        "key-spacing": "error",
        "keyword-spacing": [
            "error",
            {
                "after": false,
                "before": true
            }
        ],
        "semi-spacing": [
            "error",
            {
                "after": true,
                "before": false
            }
        ],
        "space-before-function-paren": "error",
        "space-in-parens": [
            "error",
            "always"
        ]
    }
}